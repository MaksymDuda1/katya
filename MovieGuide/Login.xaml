<Window x:Class="MovieGuide.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MovieGuide" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 20"/>
            <TextBlock Text="Enter your email:" FontWeight="Bold"/>
            <TextBox x:Name="txtLogin"  Margin="0 0 0 10" Width="200"/>
            <TextBlock Text="Enter your password:" FontWeight="Bold"></TextBlock>
            <PasswordBox x:Name="txtPassword"  Margin="0 0 0 10" Width="200"/>
            <Button Content="Login" Click="Login_Click" Width="100"/>
            <TextBlock Text="Don't have an account? Click here to register" TextDecorations="Underline" Foreground="Blue" MouseLeftButtonDown="GoToRegister_Click" Cursor="Hand"/>
            <TextBlock x:Name="txtError" Text="" Foreground="Red" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
