<Window x:Class="MovieGuide.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MovieGuide" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="50">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Registration" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBlock Text="Enter your username:" FontWeight="Bold"/>
            <TextBox x:Name="txtUsername"  Margin="0 0 0 10" Width="200"></TextBox>

            <TextBlock Text="Enter your email:" FontWeight="Bold"/>
            <TextBox x:Name="txtLogin"  Margin="0 0 0 10" Width="200" ></TextBox>

            <TextBlock Text="Enter your password:" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword"  Margin="0 0 0 10" Width="200" ></PasswordBox>

            <Button Content="Registration"  Width="100" Click="Registration_Click"/>

            <TextBlock Text="Already have an account? Click here to login" TextDecorations="Underline" Foreground="Blue" MouseLeftButtonDown="GoToLogin_Click" Cursor="Hand"/>

            <TextBlock x:Name="txtError" Text="" Foreground="Red" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
